{
  "root": true,
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "env": {
    "node": true
  },
  "globals": {
    "expect": true
  },
  "parserOptions": {
    "ecmaVersion": 2023,
    "sourceType": "module"
  },
  "plugins": [
    "prettier",
    "import-no-duplicates-prefix-resolved-path"
  ],
  "rules": {
    "prettier/prettier": "error",
    "arrow-body-style": "off",
    "arrow-parens": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "eqeqeq": "error",
    "no-unused-vars": "error",
    "no-unused-expressions": "error"
  }
}